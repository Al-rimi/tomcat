{
  "name": "tomcat",
  "displayName": "Tomcat",
  "description": "Fully Automated Support for Apache Tomcat",
  "version": "2.2.4",
  "publisher": "Al-rimi",
  "author": {
    "email": "abdullah@syalux.com",
    "name": "Abdullah Al raimi",
    "url": "https://syalux.com"
  },
  "icon": "resources/tomcat-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Al-rimi/tomcat"
  },
  "bugs": {
    "url": "https://github.com/Al-rimi/tomcat-extension/issues"
  },
  "homepage": "https://github.com/Al-rimi/tomcat#readme",
  "keywords": [
    "apache tomcat",
    "tomcat",
    "server",
    "deployment",
    "javaEE",
    "java",
    "jsp",
    "vscode"
  ],
  "galleryBanner": {
    "color": "#4A90E2",
    "theme": "dark"
  },
  "categories": [
    "SCM Providers",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*"
  ],
  "engines": {
    "vscode": "^1.56.0",
    "node": ">=14.16.0"
  },
  "files": [
    "out/**/*",
    "syntaxes/**/*",
    "resources/**/*",
    "language-configuration.json",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE**"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tomcat-log",
        "aliases": ["Tomcat Log"],
        "extensions": [".tlog"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tomcat-log",
        "scopeName": "source.tomcat-log",
        "path": "./syntaxes/tomcat-log.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "tomcat.deploy",
        "title": "Deploy",
        "category": "Tomcat",
        "icon": {
          "light": "resources/tomcat-icon-light.svg",
          "dark": "resources/tomcat-icon-dark.svg"
        }
      },
      {
        "command": "tomcat.start",
        "title": "Tomcat: Start"
      },
      {
        "command": "tomcat.stop",
        "title": "Tomcat: Stop"
      },
      {
        "command": "tomcat.clean",
        "title": "Tomcat: Clean"
      },
      {
        "command": "tomcat.help",
        "title": "Tomcat: Help"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tomcat.deploy",
          "when": "tomcat.showdeployButton",
          "group": "navigation",
          "tooltip": "Tomcat Deploy"
        }
      ]
    },
    "configuration": {
      "title": "Tomcat",
      "properties": {
        "tomcat.webApps": {
          "type": "array",
          "default": [
            "ROOT",
            "docs",
            "examples",
            "manager",
            "host-manager"
          ],
          "description": "List of web applications to keep when cleaning Apache Tomcat."
        },
        "tomcat.defaultDeployMode": {
          "type": "string",
          "enum": [
            "Disabled",
            "On Save",
            "On Shortcut"
          ],
          "default": "Disabled",
          "scope": "machine",
          "description": "Select the default deployment mode. 'On Save' will deploy the project when you save it. 'On Shortcut' will deploy the project when you press Ctrl+Shift+D."
        },
        "tomcat.defaultBuildType": {
          "type": "string",
          "enum": [
            "Fast",
            "Maven",
            "Gradle"
          ],
          "default": "Fast",
          "description": "Select the default build type for auto deployment."
        },
        "tomcat.defaultBrowser": {
          "type": "string",
          "enum": [
            "Google Chrome",
            "Microsoft Edge",
            "Firefox",
            "Safari",
            "Brave",
            "Opera"
          ],
          "default": "Google Chrome",
          "description": "Select your preferred browser to launch the app. Note that Firefox and Safari do not support the Chrome Debug Protocol, and automation is not supported in these browsers."
        },
        "tomcat.port": {
          "type": "number",
          "default": 8080,
          "minimum": 1024,
          "maximum": 49151,
          "errorMessage": "Port must be between 1024-49151",
          "description": "The port number for the Tomcat server, allowed range is 1024-49151."
        },
        "tomcat.home": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "The path to the Apache Tomcat installation. If not set, the extension will try to find the Tomcat installation automatically."
        },
        "tomcat.java.home": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "The path to the JDK installation. If not set, the extension will try to find the JDK automatically."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm install && npm run compile",
    "package": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "node ./node_modules/@vscode/test-electron/out/runTest --extensionDevelopmentPath=. --extensionTestsPath=out/test/suite",
    "coverage": "nyc --reporter=lcov npm test"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.28",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.56.0",
    "@types/webpack-env": "^1.18.8",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.15.0",
    "chai": "^4.5.0",
    "eslint": "^9.23.0",
    "mocha": "^10.4.0",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "ws": "^7.4.6"
  }
}
