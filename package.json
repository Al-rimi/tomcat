{
  "name": "tomcat",
  "displayName": "Tomcat",
  "description": "Fully Automated Support for Apache Tomcat",
  "version": "2.0.0",
  "publisher": "Al-rimi",
  "author": {
    "email": "abdullah@syalux.com",
    "name": "Abdullah Al raimi",
    "url": "https://syalux.com"
  },
  "icon": "resources/tomcat-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Al-rimi/tomcat"
  },
  "bugs": {
    "url": "https://github.com/Al-rimi/tomcat-extension/issues"
  },
  "homepage": "https://github.com/Al-rimi/tomcat#readme",
  "keywords": [
    "apache tomcat",
    "tomcat",
    "server",
    "deployment",
    "javaEE",
    "java",
    "jsp",
    "vscode"
  ],
  "galleryBanner": {
    "color": "#4A90E2",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "SCM Providers",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tomcat.deploy",
        "title": "Deploy",
        "category": "Tomcat",
        "icon": {
          "light": "resources/tomcat-icon-light.svg",
          "dark": "resources/tomcat-icon-dark.svg"
        }
      },
      {
        "command": "tomcat.start",
        "title": "Tomcat: Start"
      },
      {
        "command": "tomcat.stop",
        "title": "Tomcat: Stop"
      },
      {
        "command": "tomcat.clean",
        "title": "Tomcat: Clean"
      },
      {
        "command": "tomcat.help",
        "title": "Tomcat: Help"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tomcat.deploy",
          "when": "tomcat.showdeployButton",
          "group": "navigation",
          "tooltip": "Tomcat Deploy"
        }
      ]
    },
    "configuration": {
      "title": "Tomcat",
      "properties": {
        "tomcat.webApps": {
          "type": "array",
          "default": [
            "ROOT",
            "docs",
            "examples",
            "manager",
            "host-manager"
          ],
          "description": "List of web applications to keep when cleaning Apache Tomcat."
        },
        "tomcat.defaultDeployMode": {
          "type": "string",
          "enum": [
            "Disabled",
            "On Save",
            "On Shortcut"
          ],
          "default": "Disabled",
          "description": "Select the default deployment mode. 'Disabled' will turn off auto deployment, 'On Save' will deploy the application automatically when a file is saved, and 'On Shortcut' will deploy the application for Windows/Linux on ctrl+s, Mac on cmd+s."
        },
        "tomcat.defaultBuildType": {
          "type": "string",
          "enum": [
            "Fast",
            "Maven",
            "Gradle"
          ],
          "default": "Fast",
          "description": "Select the default build type for auto deployment."
        },
        "tomcat.defaultBrowser": {
          "type": "string",
          "enum": [
            "Google Chrome",
            "Microsoft Edge",
            "Firefox",
            "Safari",
            "Brave",
            "Opera"
          ],
          "default": "Google Chrome",
          "description": "Select your preferred browser to launch the app. Note that Firefox and Safari do not support the Chrome Debug Protocol, and automation is not supported in these browsers."
        },
        "tomcat.loggingLevel": {
          "type": "string",
          "enum": [
            "DEBUG",
            "INFO",
            "WARN",
            "ERROR",
            "SILENT"
          ],
          "default": "WARN",
          "description": "Set the logging verbosity level"
        },
        "tomcat.port": {
          "type": "number",
          "default": 8080,
          "description": "The port number for the Tomcat server, allowed range is 1024-49151."
        },
        "tomcat.home": {
          "type": "string",
          "default": "",
          "description": "The path to the Tomcat installation (e.g., C:\\Java\\apache-tomcat-xx)."
        },
        "tomcat.java.home": {
          "type": "string",
          "default": "",
          "description": "The path to the Java installation. (e.g., C:\\Java\\jdk-xx)."
        }
      }
    }
  },
  "scripts": {
    "package": "npm run compile && webpack --mode production",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "npm run compile && node ./node_modules/@vscode/test-electron/out/runTest --extensionDevelopmentPath=. --extensionTestsPath=out/test/suite"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/tail": "^2.2.3",
    "@types/vscode": "^1.56.0",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "ws": "^7.4.6"
  }
}
